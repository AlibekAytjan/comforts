{
  "schemaVersion": 1,
  "id": "comforts",
  "version": "${version}",
  "name": "Comforts",
  "description": "Adds sleeping bags and hammocks for, respectively, portability and turning day to night, without setting new spawns. Comes in 16 different colors!",
  "authors": ["C4"],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/comforts-fabric",
    "sources": "https://github.com/TheIllusiveC4/Comforts",
    "issues": "https://github.com/TheIllusiveC4/Comforts/issues"
  },
  "license": "LGPL-3.0-or-later",
  "icon": "assets/comforts/comforts_icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "top.theillusivec4.comforts.common.ComfortsMod"
    ],
    "client": [
      "top.theillusivec4.comforts.client.ComfortsClientMod"
    ],
    "cardinal-components-entity": [
      "top.theillusivec4.comforts.common.ComfortsComponents"
    ],
    "modmenu": [
      "top.theillusivec4.comforts.common.integration.ComfortsModMenu"
    ]
  },
  "custom": {
    "cardinal-components": [
      "comforts:sleep_tracker"
    ]
  },
  "mixins": [
    "comforts.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.7.4",
    "minecraft": "1.16.x",
    "fabric-networking-blockentity-v0": "*",
    "fabric-item-groups-v0": "*",
    "fabric-resource-loader-v0": "*",
    "fabric-renderer-registries-v1": "*",
    "fabric-textures-v0": "*",
    "fabric-registry-sync-v0": "*",
    "fabric-lifecycle-events-v1": "*",
    "cardinal-components-entity": ">=2.7.10",
    "somnus": ">=0.0.3-1.16.4"
  }
}
